@model IEnumerable<BusinessLayer.DataTransferObjects.EmployerDto>

@{
    ViewBag.Title = "Employers";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a class="btn btn-success btn-sm" href="@Url.Action("OffersOfEmployer", "JobOffer", new {id = item.Id}, null)">
                    See Jobs<i class="glyphicon glyphicon-new-window ml-2" style="margin-left: 0.5rem"></i>
                </a> |
                <a class="btn btn-primary btn-sm" href="@Url.Action("Details", new {id = item.Id})">
                    Details<i class="glyphicon glyphicon-tag" style="margin-left: 0.5rem"></i>
                </a>
            </td>
        </tr>
    }

</table>