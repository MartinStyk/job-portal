@model IEnumerable<BusinessLayer.DataTransferObjects.SkillTagDto>

@if (Request.IsAuthenticated && User.IsInRole("Employer"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Show related jobs", "OffersBySkill", "JobOffer", new {id = item.Id}, null)
            </td>
        </tr>
    }

</table>