@model IEnumerable<BusinessLayer.DataTransferObjects.JobApplicationDto>

@{
    ViewBag.Title = "Applications";
}

<h2>Applications</h2>

<p>
    @Html.ActionLink("Create New", "Index", "JobOffer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobOffer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobOffer.Employer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applicant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobApplicationStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobOffer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobOffer.Employer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Applicant.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobApplicationStatus)
        </td>
        <td>
            @Html.ActionLink("Accept", "AcceptApplication", new { id=item.Id }) |
            @Html.ActionLink("Reject", "RejectApplication", new { id=item.Id }) |
            @Html.ActionLink("Close", "CloseApplication", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
